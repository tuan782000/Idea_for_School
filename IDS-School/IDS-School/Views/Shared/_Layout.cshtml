<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>University of Greenwich</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/css/all.css">


    <!-- --------- Owl-Carousel ------------------->
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">

    <!-- ------------ AOS Library ------------------------- -->
    <link rel="stylesheet" href="~/Content/css/aos.css">

    <!-- Custom Style   -->
    <link rel="stylesheet" href="~/Content/css/Style.css">

</head>

<body>

    <!-- ----------------------------  Navigation ---------------------------------------------- -->

    <nav class="nav">
        <div class="nav-menu flex-row">
            <div class="nav-brand">
                <a href="#" class="text-gray">Greenwich University</a>
            </div>
            <div class="toggle-collapse">
                <div class="toggle-icons">
                    <i class="fas fa-bars"></i>
                </div>
            </div>
            <div>
                <ul class="nav-items">
                    <li class="nav-link">
                        @*<a href="#">Home</a>*@
                        <a asp-area="Views" asp-page="/Home/Index">Home</a>
                    </li>
                    @*<li class="nav-link">
                        <a href="#">Category</a>
                    </li>*@
                    <partial name="_LoginPartial" />
                </ul>
            </div>
            <div class="social text-gray">
                <a href="#"><i class="fab fa-facebook-f"></i></a>
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </nav>

    <!-- ------------x---------------  Navigation --------------------------x------------------- -->
    <!----------------------------- Main Site Section ------------------------------>

    @RenderBody();

    <!---------------x------------- Main Site Section ---------------x-------------->
    <!-- --------------------------- Footer ---------------------------------------- -->

    <footer class="footer">
        <div class="container">
            <div class="about-us" data-aos="fade-right" data-aos-delay="200">
                <h2>About us</h2>
                <ul style="padding-left: 0;">
                    <li>Contact us</li>
                    <li>Our Campuses</li>
                    <li>Our faculties</li>
                    <li>Partner institutions</li>
                    <li>How to find us</li>
                    <li>Events</li>
                    <li>Media & news</li>
                </ul>
            </div>
            <div class="newsletter" data-aos="fade-right" data-aos-delay="200">
                <h2>Newsletter</h2>
                <p>Stay update with our latest</p>
                <div class="form-element">
                    <input type="text" placeholder="Email"><span><i class="fas fa-chevron-right"></i></span>
                </div>
            </div>
            <div class="instagram" data-aos="fade-left" data-aos-delay="200">
                <h2>Instagram</h2>
                <div class="flex-row">
                    <img src="~/Content/assets/instagram/thumb-card3.png" alt="insta1">
                    <img src="~/Content/assets/instagram/thumb-card4.png" alt="insta2">
                    <img src="~/Content/assets/instagram/thumb-card5.png" alt="insta3">
                </div>
                <div class="flex-row">
                    <img src="~/Content/assets/instagram/thumb-card6.png" alt="insta4">
                    <img src="~/Content/assets/instagram/thumb-card7.png" alt="insta5">
                    <img src="~/Content/assets/instagram/thumb-card8.png" alt="insta6">
                </div>
            </div>
            <div class="follow" data-aos="fade-left" data-aos-delay="200">
                <h2>Follow us</h2>
                <p>Let us be Social</p>
                <div>
                    <i class="fab fa-facebook-f"></i>
                    <i class="fab fa-twitter"></i>
                    <i class="fab fa-instagram"></i>
                    <i class="fab fa-youtube"></i>
                </div>
            </div>
        </div>
        <div class="rights flex-row">
            <h4 class="text-gray">
                Copyright ©2022 All rights reserved | made by
                <a href="https://github.com/tuan782000" target="_black">Tuan Nguyen Thai</a>
            </h4>
        </div>
        <div class="move-up">
            <span><i class="fas fa-arrow-circle-up fa-2x"></i></span>
        </div>
    </footer>

    <!-- -------------x------------- Footer --------------------x------------------- -->
    <!-- Jquery Library file -->
    <script src="~/Content/js/Jquery3.4.1.min.js"></script>

    <!-- --------- Owl-Carousel js ------------------->
    <script src="~/Content/js/owl.carousel.min.js"></script>

    <!-- ------------ AOS js Library  ------------------------- -->
    <script src="~/Content/js/aos.js"></script>

    <!-- Custom Javascript file -->
    <script src="~/Content/js/main.js"></script>
</body>

</html>