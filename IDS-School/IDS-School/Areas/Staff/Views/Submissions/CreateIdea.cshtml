@model IDS_School.Models.Idea

@{
    ViewData["Title"] = "Create";

    Layout = "~/Areas/Admin/Views/Shared/_layout_Admin.cshtml";

}

<div class="content-wrapper">
    <div class="card-header">
        <h3 class="card-title">Create Idea</h3>
    </div>
    <div class="card-body">
        <form asp-action="CreateIdea" enctype="multipart/form-data" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubmissionId" value="@ViewBag.SubmissionId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"> Select Category</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.CategoryId" class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <div class="input-group">
                    <div class="custom-file">
                        @*@Html.TextBoxFor(model => model.Files, new { @id = "exampleInputFile", @type = "file", @name = "file" })*@
                        <input type="file" name="file" id="exampleInputFile">
                        @*<label class="custom-file-label" for="exampleInputFile">Choose file</label>*@
                    </div>
                </div>
            </div>
            <ul style="list-style-type:none">
                <li>
                    <div class="icheck-primary d-inline ml-2">
                        <input type="checkbox" name="isAcceptTerms" id="todoCheck2" value="true" />
                        <label for="todoCheck2"></label>
                    </div>
                    <span class="text">By checking this box, you are agreeing to <strong style="color:blue">our terms of service</strong></span>
                </li>
                <li>
                    <div class="icheck-primary d-inline ml-2">
                        <input type="checkbox" id="checkboxPrimary" name="isAnoymous" value="true">
                        <input type="hidden" value="false" name="isAnoymous" />
                        <label for="checkboxPrimary">Post as an anonymous ?</label>
                    </div>
                </li>
            </ul>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to list</a>
            </div>
        </form>
</div>
</div>


