@model IEnumerable<IDS_School.Models.Submission>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_Admin.cshtml";
}
<div class="content-wrapper">
    <div id="chart_div1"></div>
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">List Of Topic</h3>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    @*<th>Total Ideas</th>*@
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td class="col-2">@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td class="col-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary" placeholder="Detail"> <i class="fa fa-eye" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card-header">
            <div class="alert alert-warning" role="alert">
                None Topic To Analyze Right Now.
            </div>
        </div>
    }

</div>
