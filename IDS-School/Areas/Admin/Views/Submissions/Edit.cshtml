@model IDS_School.Models.Submission

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout_Admin.cshtml";
}



<div class="content-wrapper">
    <div class="card-header">
        <h3 class="card-title">Edit Submission</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Closure Date 1</label>
                @Html.TextBoxFor(Model => Model.ClosureDate, "{0:yyyy-MM-dd}", new { @id = "editclosureDate", @class = "form-control", @type = "date", @min = Model.ClosureDate.ToString("yyyy-MM-dd") })
                @*<label asp-for="ClosureDate" class="control-label"></label>
        <input asp-for="ClosureDate" class="form-control" />
        <span asp-validation-for="ClosureDate" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label class="control-label">Final Closure Date</label>
                @Html.TextBoxFor(Model => Model.FinalClosureDate, "{0:yyyy-MM-dd}", new { @id = "editfinalclosuredate", @class = "form-control", @type = "date", @min = Model.FinalClosureDate.ToString("yyyy-MM-dd") })
                @*<label asp-for="FinalClosureDate" class="control-label"></label>
        <input asp-for="FinalClosureDate" class="form-control" />
        <span asp-validation-for="FinalClosureDate" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to list</a>
            </div>
        </form>
    </div>
</div>
