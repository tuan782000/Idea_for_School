
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__shake" src="~/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="" asp-controller="Admin" asp-action="Homes" class="nav-link">Home</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <i class="fas fa-th-large"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-area="" asp-controller="Admin" asp-action="Homes" class="brand-link">
                <img src="~/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Group 12</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <div class="img-circle elevation-2">
                            <form class="brand-image" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="btn btn-danger btn-sm"><i class="nav-icon fas fa-sign-out-alt"></i></button>
                            </form>
                        </div>
                    </div>
                    <div class="info">
                        <a class="d-block" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item menu">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-users"></i>
                                        <p>
                                            Department
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Admin" asp-action="Departments" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>List Departments</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item menu">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-users-cog"></i>
                                        <p>
                                            Role
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Admin" asp-action="Role" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>List Role</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item menu">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-user-friends"></i>
                                        <p>
                                            User
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Admin" asp-action="User" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>List User</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item menu">
                                    <a asp-area="" asp-controller="Admin" asp-action="Charts" class="nav-link">
                                        <i class="nav-icon fas fa-chart-bar"></i>
                                        <p>
                                            Charts
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item menu">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-paper-plane"></i>
                                        <p>
                                            Submission
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Admin" asp-action="Submissions" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>List Submission</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            @if (User.IsInRole("Coordinator"))
                            {
                                <li class="nav-item menu">
                                    <a asp-area="" asp-controller="Coordinator" asp-action="Charts" class="nav-link">
                                        <i class="nav-icon fas fa-chart-bar"></i>
                                        <p>
                                            Charts
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item menu">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-paper-plane"></i>
                                        <p>
                                            Submission
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Coordinator" asp-action="Submissions" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>List Submission</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            @if (User.IsInRole("Manager"))
                            {
                                <li class="nav-item menu">
                                    <a asp-area="" asp-controller="Manager" asp-action="Charts" class="nav-link">
                                        <i class="nav-icon fas fa-chart-bar"></i>
                                        <p>
                                            Charts
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item menu">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-layer-group"></i>
                                        <p>
                                            Category
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Manager" asp-action="Categories" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>List Categories</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item menu">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-paper-plane"></i>
                                        <p>
                                            Submission
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Manager" asp-action="Submissions" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>List Submission</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            @if (User.IsInRole("Staff"))
                            {
                                <li class="nav-item menu">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-paper-plane"></i>
                                        <p>
                                            Submission
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-area="" asp-controller="Staff" asp-action="Submissions" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>List Submission</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }

                    </ul>
                    </nav>

            </div>

        </aside>

        @RenderBody();

        <footer class="main-footer">
            <strong>Copyright &copy; 2014-2021 <a href="https://adminlte.io">AdminLTE.io</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 3.2.0
            </div>
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>
        $.widget.bridge('uibutton', $.ui.button)
    </script>
